<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewReportBoundary">
   <children>
      <AnchorPane prefHeight="488.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="488.0" fitWidth="800.0">
               <image>
                  <Image url="@cinema-with-white-screen-curtain-seats_259139-264.jpg" />
               </image>
               <cursor>
                  <Cursor fx:constant="SE_RESIZE" />
               </cursor>
            </ImageView>
            <Label fx:id="title" layoutX="272.0" layoutY="28.0" text="View Report" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="45.0" />
               </font>
            </Label>
            <LineChart fx:id="reports_chart" layoutX="81.0" layoutY="81.0" prefHeight="226.0" prefWidth="590.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis prefHeight="163.0" prefWidth="28.0" side="LEFT" />
              </yAxis>
            </LineChart>
            <Text fx:id="bestSalesText" fill="WHITE" layoutX="93.0" layoutY="355.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Best sales of the month were made on">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Text>
            <Text fx:id="worstSalesText" fill="WHITE" layoutX="93.0" layoutY="376.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Worst sales of the month were made on">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Text>
            <Text fx:id="totalText" fill="WHITE" layoutX="93.0" layoutY="404.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total selled tickets in this month:">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
      <Button fx:id="GoBackToMainBtn" layoutX="23.0" layoutY="21.0" mnemonicParsing="false" onAction="#clickGoBackToMainBtn" prefHeight="26.0" prefWidth="123.0" text="&lt;&lt; go back to main">
         <font>
            <Font name="System Bold Italic" size="11.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.35478729009628296" green="0.6100000143051147" blue="0.32330000400543213" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.6736842393875122" green="0.00499025359749794" blue="0.5510903000831604" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
   </children>
</AnchorPane>
